{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "Components/*": ["./src/Components/*"],
      "Header/*": ["src/App/Components/Header/*"],
      "Data/*": ["./src/shared/*"],
      "Interfaces": ["./src/Data/Interfaces/", "./src/Data/Interfaces/*"],
      "Styles/*": ["./src/Styles/*"]
    },

    /* Types Configuration */
    "typeRoots": ["./src/shared/state", "./node_modules/@types"],
    "types": [],

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "electron", "src/shared/state/types/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules", "dist"]
}
